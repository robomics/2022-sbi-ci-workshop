name: 007 - Running Actions using containers

on:
  push:
    branches: [ main, gha-devel ]
    paths: [ ".github/workflows/007*.yml" ]

jobs:
  container-example:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        image:
          - 'archlinux:base'
          - 'centos:7'
          - 'fedora:latest'

    container:
      image: ${{ matrix.image }}

    steps:
      - name: Print distro information
        run: cat /etc/*-release
